<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{% if title %} {{ title }} | {{ site.title }} {% else%} {{ site.title }} {% endif %}</title>

<meta name="author" content="Adilson Santos">

<meta
  name="description"
  content="{% if description %}{{ description }}{% else %}{{site.description}}{% endif %}"
/>

{%- comment -%}Twitter{%- endcomment -%}
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title"
	content="{% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}"/>
<meta name="twitter:description" content="
	{% if page.description %}{{ page.description }}{% else %}{{ site.description }}{% endif %}"/>
<meta name="twitter:site" content="{{ site.url }}" />
<meta name="twitter:creator" content="{{ site.author.name }}" />
<meta name="twitter:image:src" content="{{ site.url }}{{ image }}"/>
<meta name="twitter:dnt" content="on">

{%- comment -%}Open Graph{%- endcomment -%}
<meta
	name="og:title"
	content="{% if page.title %}{{ page.title }}{% else %}{{site.title}}{% endif %}"/>
<meta
	name="og:description"
	content="{% if page.description %}{{ page.description }}
	{% else %}{{ site.description }}{% endif %}"
/>
<meta name="og:image" content="{{ site.url }}{{ image }}" />
<meta name="og:url" content="{{ site.url }}{{ page.url }}" />
<meta name="og:site_name" content="{{ site.name }}" />
<meta name="og:locale" content="{{ site.lang }}"/>
<meta name="og:type" content="website"/>

{%- comment -%}JSOn-LD Structured data{%- endcomment -%}
<script type="application/ld+json">
	{"description":
		"{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}",
	"@type": "WebSite",
	"url": "{{ site.url }}",
	"headline": "{{ site.title }}",
	"name": "{{ site.name }}",
	{% assign sameLinks = site.social | map: 'url' %}
	"sameAs": {{ sameLinks | json }},
	"image": "{{ site.url }}{{ image | url }}",
	"author": {
		"@type": "Person",
		"name": "{{site.author.name}}"
	},
	"@context": "https://schema.org"}
</script>
{%- comment -%}Icons{%- endcomment -%}
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#0f0f0f">
<meta name="msapplication-TileColor" content="#0f0f0f">
<link href="/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png"/>
<link href="/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png"/>
<link rel="manifest" href="/site.webmanifest">
<link color="#0F0F0F" href="/safari-pinned-tab.svg" rel="mask-icon"/>
<meta content="#0F0F0F" name="msapplication-TileColor"/>
<meta content="/mstile-144x144.png" name="msapplication-TileImage"/>
<meta content="/browserconfig.xml" name="msapplication-config"/>
<meta content="nopin" name="pinterest" />
<meta name="generator" content="{{ eleventy.generator }}">
<meta name="robots" content="noimageindex, nositelinkssearchbox, noarchive, noai, noimageai">
