---
layout: default
---
<div class="container">
    <div class="noise"></div>
{% include "hero" %}
<main id="main">
  <section class="projetos grid__module--site" id="projetos">
    <hr/>
    <div class="projetos__header">
      <h2 class="projetos__header--title">Principais projetos</h2>
      <span class="projetos__header--subtitle">
        Ou algumas coisas legais que eu fiz.
      </span>
    </div>
    <div class="projetos__principais">
      {%- for post in collections.post reversed -%}
        <a href="{{ post.url | url }}" class="card" title="{{ post.data.title }}">
           <div class="noise"></div>
          {% assign card = post.data.image | prepend : "src" %}
          {% assign alt = post.data.description %}
          {% images card, alt, "card__picture", "card__picture--image", "(min-width: 1260px) 470px, (min-width: 620px) calc(42.1vw - 52px), calc(92.33vw - 64px), 100vw" %}
          <div class="card__description">
            <h3 class="card__description--title">{{ post.data.title | escape }}</h3>
            <span class="card__description--tag">
              {{ post.data.categories | join: " â€¢ " }}
            </span>
        </div>
      </a>
      {%- endfor -%}
    </div>
    <hr/>
  </section>
{% include "contact" %}
</main>
</div>
