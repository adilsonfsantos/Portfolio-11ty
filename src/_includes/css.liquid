{% case layout %}
	{% when "home" %}
		{% assign style_css = "home.css" %}
	{% when 'post' %}
		{% assign style_css = "post.css" %}
	{% when 'page' %}
		{% assign style_css = "page.css" %}
	{% when '404' %}
		{% assign style_css = "404.css" %}
{% endcase %}
<link rel="stylesheet" href="{{ style_css | prepend: "/assets/css/" }}">
